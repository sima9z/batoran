<div class="signs_title">
  <h2><i class="material-icons-outlined">star_rate</i>星座一覧</h2>
</div>

<div class="signs_index">
  <% @data['results'].each do |object| %>
    <p><%=link_to object['jpName'], sign_path(object['id']), class: "index-menu-link" %></p>
  <% end %>
  <p class="dummy"></p>
  <p class="dummy"></p>
  <p class="dummy"></p>
</div>

<script>
navigator.geolocation.getCurrentPosition(function(position) {
  $.ajax({
    url: '/update_location',
    type: 'POST',
    data: { 
      latitude: position.coords.latitude, 
      longitude: position.coords.longitude 
    },
    beforeSend: function(xhr) {xhr.setRequestHeader('X-CSRF-Token', $('meta[name="csrf-token"]').attr('content'))}
  });
});
  </script>

